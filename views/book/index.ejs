<%- include('../main/layoutStart', {title: metaTitle}) %>
<%- include('../main/header', {title, navigation, currentUrl}) %>

<main class="main">
  <% if(book) { %>
    <div class="book">
      <div class="book__title">
        <h1><%= book.title %></h1>
        <a href="/edit/<%= book.id %>">[редактировать]</a>
      </div>
    

      <div class="book__info">
        <span class="book__label">Авторы:</span>
        <span class="book_value"><%= book.authors %></span>
      </div>

      <div class="book__info">
        <span class="book__label">Описание книги:</span>
        <span class="book_value"><%= book.description %></span>
      </div>

      <div class="book__info">
        <span class="book__label">Избранное:</span>
        <span class="book_value"><%= book.favorite %></span>
      </div>

      <div class="book__info">
        <span class="book__label">Файл:</span>
        <a href="<%= book.fileBook %>" target="_blank" class="book_value"><%= book.fileBookOriginalName || book.fileName %></a>
      </div>
    </div>
  <% } else { %>
    <p>Такой книги не существует...</p>
  <% } %>
</main>

<%- include('../main/layoutEnd') %>